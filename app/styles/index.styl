@import "axis"
$fa-font-path = "../node_modules/font-awesome-stylus/fonts"
@import "../node_modules/font-awesome-stylus/stylus/font-awesome"
@import "./variables"
@import "./fonts"

*
{
	padding: 0
	margin: 0
}

*:active, *:focus
{
	outline: 0
}

body, html
{
	margin: 0
	padding: 0
	font-family: "Lato"
	color: $text-color
}

#app > div
{
	display: flex
	flex-grow: 1
	height: 100vh
	margin: 0
	padding: 0
}

#sidebar
{
	background-color: $sidebar-bg-color
	flex: 1 0
	max-width: 200px

	#search
	{
		input
		{
			border: 2px solid $search-bg-color
			width: 100%
			height: 30px
			background-color: $search-bg-color
			text-indent: 30px

			&::-webkit-input-placeholder
			{
				color: $search-text-color
				font-family: "Lato"
			}
		}

		.fa-search
		{
			position: absolute
			left: 5px
			top: 8px
			color: $search-icon-color
		}
	}

	#games
	{
		ul
		{
			list-style: none
		}

		.game
		{
			padding-top: 5px
			padding-bottom: 5px
			display: flex
			align-items: center
			background-color: $game-bg-color

			&.selected
			{
				background-color: $game-selected-bg-color
			}

			img
			{
				border-radius: 150px
				width: 30px
				margin-left: 5px
				margin-right: 10px
			}
		}
	}
}

#content
{
	padding-left: 5px
	background-color: #000
	flex: 1 0
}
